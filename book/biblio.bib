@Article{Foltz2008,
  author   = {Foltz, Gregory R. and McPhaden, Michael J.},
  title    = {{Seasonal mixed layer salinity balance of the tropical North Atlantic Ocean}},
  journal  = jgr,
  year     = {2008},
  volume   = {113},
  number   = {C2},
  month    = feb,
  issn     = {2156-2202},
  abstract = {In this study the causes of the seasonal cycle of mixed layer salinity in the tropical North Atlantic Ocean are investigated from a combination of satellite, atmospheric reanalysis, and in situ data sets. Results indicate that the salinity balance varies regionally, leading to a seasonal cycle in sea surface salinity (SSS) with significant spatial inhomogeneity. For example, horizontal salinity advection plays a key role in the salinity balance of the western tropical North Atlantic (10-25\B0N, 50-65\B0W), where seasonal variations in SSS are relatively large. In contrast, in the north-central basin (15-25\B0N, 20-50\B0W), freshening from meridional advection balances an excess of evaporation over precipitation, resulting in a very weak seasonal cycle of mixed layer salinity. Farther south (5-15\B0N, 20-45\B0W), seasonal variations of precipitation are more significant and drive a pronounced seasonal cycle of mixed layer salinity. Throughout most of the tropical North Atlantic the sum of the surface moisture flux and horizontal advection underestimates the mixed layer salinity tendency during boreal fall and winter. This is the time of year with highest wind speeds and highest negative buoyancy flux, suggesting that vertical turbulent entrainment of high-salinity thermocline water may be important. Daily measurements from a moored buoy in the central tropical North Atlantic are consistent with this interpretation. The results of this study highlight the complexity of the seasonal salinity balance in the tropical North Atlantic Ocean and the need for continued in situ monitoring of upper ocean salinity and currents to complement future space-based surface salinity measurements.},
  doi      = {10.1029/2007JC004178},
  file     = {Foltz2008.pdf:Foltz2008.pdf:PDF},
  keywords = {tropical Atlantic, salinity, mixed layer, evaporation, precipitation},
  url      = {http://dx.doi.org/10.1029/2007JC004178},
}

