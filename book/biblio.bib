@Article{Reul2012a,
  Title                    = {{Overview of the First SMOS Sea Surface Salinity Products. Part I: Quality Assessment for the Second Half of 2010}},
  Author                   = {Reul, N. and Tenerelli, J. and Boutin, J. and Chapron, B. and Paul, F. and Brion, E. and Gaillard, F. and Archer, O.},
