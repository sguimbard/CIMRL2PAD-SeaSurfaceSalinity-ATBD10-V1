  Url                      = {http://dx.doi.org/10.1111/j.2153-3490.1971.tb00585.x}
}

@Article{Kummerow2001,
  author   = {Christian Kummerow and Y. Hong and W. S. Olson and S. Yang and R. F. Adler and J. McCollum and R. Ferraro and G. Petty and D-B. Shin and T. T. Wilheit},
