@Article{Tournadre2005,
  Title                    = {{I}mpact of rain cell on scatterometer data: 2. {C}orrection of {S}eawinds measured backscatter and wind and rain flagging},
  Author                   = {Tournadre, J. and Quilfen, Y.},
  Journal                  = jgr,
