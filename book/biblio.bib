@Article{Bahar1983b,
  author   = {Bahar, E. and Barrick, D. and Fitzwater, M.},
  journal  = tap,
  title    = {{C}omputations of scattering cross sections for composite surfaces and the specification of the wavenumber where spectral splitting occurs},
  year     = {1983},
  issn     = {0018-926X},
