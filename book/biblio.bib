@Article{Bonjean2002,
  author   = {Bonjean, Fabrice and Lagerloef, Gary S. E.},
  title    = {{D}iagnostic {M}odel and {A}nalysis of the {S}urface {C}urrents in the {T}ropical {P}acific {O}cean},
