@Article{Hasson2014,
  author   = {Hasson, Audrey and Delcroix, Thierry and Boutin, Jacqueline and Dussin, Raphael and Ballabrera-Poy, Joaquim},
  title    = {{Analyzing the 2010-2011 La Ni\~na signature in the tropical Pacific sea surface salinity using in situ data, SMOS observations, and a numerical simulation}},
