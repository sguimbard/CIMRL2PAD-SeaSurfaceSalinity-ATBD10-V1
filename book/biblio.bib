@Article{Saulquin2013,
  Title                    = {{D}etection of linear trends in multisensor time series in the presence of autocorrelated noise: {A}pplication to the chlorophyll-a {S}ea{W}i{FS} and {MERIS} data sets and extrapolation to the incoming {S}entinel 3-{OLCI} mission},
