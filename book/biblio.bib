@Article{Boutin2012,
  Title                    = {{First Assessment of SMOS Data Over Open Ocean: Part II - Sea Surface Salinity}},
  Author                   = {Boutin, J. and Martin, N. and Yin, X. and Font, J. and Reul, N. and Spurgeon, P.},
  Journal                  = TGRS,
