@Article{Delcroix2002,
  author   = {Delcroix, Thierry and Murtugudde, Raghuram},
  title    = {{Sea surface salinity changes in the East China Sea during 1997-2001: Influence of the Yangtze River}},
  journal  = jgr,
  year     = {2002},
  volume   = {107},
