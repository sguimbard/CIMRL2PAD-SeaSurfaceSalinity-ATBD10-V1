@Article{Boukabara2002,
  author   = {Boukabara, S. A. and Eymard, L. and Guillou, C. and Lemaire, D. and Sobieski, P. and Guissard, A.},
  title    = {{D}evelopment of a modified two-scale electromagnetic model simulating both active and passive microwave measurements: {C}omparison to data remotely sensed over the ocean},
  journal  = rs,
