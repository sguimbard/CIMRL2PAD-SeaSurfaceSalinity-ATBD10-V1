  doi      = {10.1002/2014JC009837},
  file     = {Meissner2014.pdf:Meissner2014.pdf:PDF},
  keywords = {geophysiscal model function, L-band, ocean surface emission and radar backscatter, Aquarius, ocean surface wind speed, surface roughness correction for salinity retrievals},
