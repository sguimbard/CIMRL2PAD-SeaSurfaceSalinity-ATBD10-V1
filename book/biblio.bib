@Article{Turiel2006,
  Title                    = {{N}umerical methods for the estimation of multifractal singularity spectra on sampled data: {A} comparative study},
  Author                   = {Turiel, A. and P\'erez-Vicente, C. J. and Grazzini, J.},
  Journal                  = JCP,
  Year                     = {2006},
  Number                   = {1},
